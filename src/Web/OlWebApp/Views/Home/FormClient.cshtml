@model Client
@{
    ViewData["Title"] = Model == null ? "Crear cliente" : "Modificar cliente";
}
<h1 class="text-center">@ViewData["Title"]</h1>

<form novalidate id="formClient">
    <input type="hidden" asp-for="ClientId" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Nombre</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Identification" class="form-label">Identificación</label>
        <input type="text" class="form-control" asp-for="Identification">
        <span asp-validation-for="Identification"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Address" class="form-label">Dirección</label>
        <input type="text" class="form-control" asp-for="Address">
        <span asp-validation-for="Address"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Telefono</label>
        <input type="tel" class="form-control" asp-for="Phone">
        <span asp-validation-for="Phone"></span>
    </div>
    <div class="mb-3 justify-content-center align-items-center d-flex">
        <button type="submit" class="btn btn-outline-success w-50">Guardar</button>
    </div>
</form>

@section Scripts 
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/js/render.js" asp-append-version="true"></script>
}